<% provide(:title, 'Noteboard') %>
<h1>Noteboard</h1>

<%= will_paginate %>
	<ul class="notes">
	  <% House.find(current_user.relationship.house_id).notes.each do |note| %>
			<% if note.permissions.find_by user_id: current_user.id %>
			<% perm = note.permissions.find_by user_id: current_user.id %>
			<% else %>
			<% perm = note.permissions.first %>
			<% end %>

			<% if perm.level < 4 %>
				<li>
		      <%= note.content %>
		      <div align="right">
						<% if perm.level < 3 %>
		      		<%= link_to "Edit", edit_note_path(note) %>
						<% end %>
		      	<% if perm.level < 2 %>
		      		<%= link_to "Delete", note, method: :delete, data: { confirm: "You sure?" } %>
		      	<% end %>
		      	Created by: <%= User.find(note.user_id).name %>
		      </div>
		    </li>
			<% end %>
		<% end %>
	</ul>
<%= will_paginate %>

<%= button_to "Create a Note", new_note_path, class: "btn btn-primary" %>
