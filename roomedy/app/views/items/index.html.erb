<% provide(:title, 'Inventory') %>
<h1>Inventory</h1>

<%= will_paginate %>
	<ul class="items">
	  <% House.find(current_user.relationship.house_id).items.each do |item| %>
	    <li>
	      <%= item.item_name %>
	      Price: $<%= item.item_price %>
	      Amount <%= item.item_amount %>
	      <div align="right">
	      	<% if item.user.id == current_user.id %>
		      	<%= link_to edit_item_path(item) do %>
			      	<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
		      	<% end %>
		      	<%= link_to "delete", item, method: :delete, data: {confirm: "Are you sure?"}%>
	      	<% end %>
	      	Created by: <%= User.find(item.user_id).name %>
	      </div>
	    </li>
	  <% end %>
	</ul>
<%= will_paginate %>

<%= button_to "Add an Item", new_item_path, class: "btn btn-primary" %>