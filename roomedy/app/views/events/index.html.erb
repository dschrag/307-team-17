<% provide(:title, 'Schedule') %>
<h1>Schedule</h1>

<%= will_paginate %>
	<ul class="events">
		<% current_user.events.each do |event| %>
			<li>
				<%= event.name %><br><%= event.description %><br><%= event.start_time %><br><%= event.end_time %><br>
				<%=link_to "Edit", edit_event_path(event) %> <%= link_to "Delete", event, method: :delete, data: { confirm: "You sure?" } %>
			</li>
		<% end %>
	</ul>
<%= will_paginate %>

<%= button_to "Create an Event", new_event_path, class: "btn btn-primary" %>