<!DOCTYPE html>
<html>
<head>
  <title>Roomedy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>

<div class="header1">
  <div class="flex-container">
    <%= link_to "Roomedy", root_path, class: "navbar_brand" %>
    <div class="login_links">
      <%= link_to "Login",  login_path, class: "btn btn-log" %>

                or

      <%= link_to "Sign Up",  new_user_path, class: "btn btn-sig" %>
    </div>
  </div>
</div>

<section data-track-prefix="Header Section">
  <div class="section-wrapper text-center">
    <%= image_tag("logo.gif") %>
  </div>
</section>

<body>
  <% if logged_in? %>
	 <%= render 'layouts/header' %>
  <% end %>
	<div class="container">
		<% flash.each do |message_type, message| %>
			<div class="alert alert-<%= message_type %>"><%= message %></div>
		<% end %>
		<%= yield %>
	</div>
</body>

</html>
