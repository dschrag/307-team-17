<% provide(:title, "Edit item") %>
<h1>Update item information</h1>
<h2><%= @item.item_name %></h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  	<%= form_for(@item) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :item_amount %>
      <%= f.number_field :item_amount, class: 'form-control' %>

      <%= f.label :item_price, "Confirmation" %>
      <%= f.number_field :item_price, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
